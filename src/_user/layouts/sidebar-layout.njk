{% extends "base.njk" %}

{% block header %}{% endblock %}

{% block content %}
<div class="main-container">
    <aside class="left-sidebar">
        <div class="sidebar-nav">
            <div class="sidebar-header">
                <h1 class="brand-title"><a href="{{ '/' | url }}" class="brand-link">MAJA EXPLOSIV</a></h1>
                <p class="brand-subtitle">AKA MAJA THOMMEN</p>
            </div>

            <nav class="nav-menu-container" aria-label="Sidebar navigation">
                <div class="nav-section">
                    <h2 class="nav-section-title">
                        <a href="{{ '/#projects' | url }}" class="nav-link-header" data-section-link="projects">PROJECTS</a>
                    </h2>
                    <ul class="nav-submenu">
                        <li><a href="{{ '/#sculptures' | url }}" class="nav-link" data-tab-link="sculptures">SCULPTURES</a></li>
                        <li><a href="{{ '/#installations' | url }}" class="nav-link" data-tab-link="installations">INSTALLATIONS</a></li>
                        <li><a href="{{ '/#performance' | url }}" class="nav-link" data-tab-link="performance">PERFORMANCE</a></li>
                        <li><a href="{{ '/#paintings' | url }}" class="nav-link" data-tab-link="paintings">PAINTINGS</a></li>
                    </ul>
                </div>

                <div class="nav-section">
                    <h2 class="nav-section-title">
                        <a href="{{ '/#about' | url }}" class="nav-link-header" data-section-link="about">ABOUT</a>
                    </h2>
                    <ul class="nav-submenu">
                        <li><a href="{{ '/#bio' | url }}" class="nav-link" data-tab-link="bio">BIO</a></li>
                        <li><a href="{{ '/#timeline' | url }}" class="nav-link" data-tab-link="timeline">TIMELINE</a></li>
                        <li><a href="{{ '/#press' | url }}" class="nav-link" data-tab-link="press">PRESS</a></li>
                        <li><a href="{{ '/#links' | url }}" class="nav-link" data-tab-link="links">LINKS</a></li>
                        <li><a href="{{ '/contact/' | url }}" class="nav-link contact-link">CONTACT</a></li>
                    </ul>
                </div>
            </nav>

            <div class="sidebar-footer">
                <p>ATELIER</p>
                <p>MAAS & THOMMEN</p>
            </div>
        </div>
    </aside>
    <main id="main-content" class="main-content">
        {# Breadcrumbs removed for homepage #}
        
        {# Suppress page title for project pages (they handle their own title styling) #}
        {% set isProjectPage = (category in ['sculptures', 'installations', 'performance', 'paintings']) %}
        
        {% if title and showPageTitle !== false and not isProjectPage %}
            <header class="page-header">
                <h1 class="page-title">{{ title }}</h1>
                {% if subtitle %}<p class="page-subtitle">{{ subtitle }}</p>{% endif %}
                {% if date %}
                    <time class="page-date" datetime="{{ date | date('YYYY-MM-DD') }}">
                        {{ date | dateDisplay }}
                    </time>
                {% endif %}
            </header>
        {% endif %}
        
        <div class="content-wrapper">
            {{ content | safe }}
        </div>

        <!-- Site Footer (Main Content Column) -->
        {% include "footer.njk" %}
    </main>
</div>
{% endblock %}

{# Suppress the base layout footer since we included it inside main #}
{% block footer %}{% endblock %}

